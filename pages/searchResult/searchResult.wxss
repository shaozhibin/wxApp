.search-container{
  font-family: PingFangSC-Regular, Arial, Tahoma, sans-serif;font-size: 24rpx;color:#333;background: #F1F1ED;
}
.ellipsis {
  overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}
.goods {
    display:-webkit-flex;
    display:flex;
    flex-direction: row;
}

.goodsInfo {
    width: 200rpx;
    height:200rpx;
    background-color:#000;
    margin:10rpx;
}
.goodsItem {
    width:200rpx;
}
.goodsImg > image {
    width:160rpx;
    height:120rpx;
}

/* 公共样式*/
.container {
    background-color:#f1f1ed;
    position: absolute;top: 0;right: 0;bottom: 0;left: 0;
}

/* 头部图片 */
.brand-header > image {
    width:750rpx;
    height:400rpx;
    position:relative;
    display:flex;
}
.brand {
    position:absolute;
    top:176rpx;
    font-size:54rpx;
    line-height:0.7;
    color:#fff;
    font-family:'Avenir Next';
    width:100%;
    text-align: center;
}
/** 筛选条件**/
.search-filters {
    background-color:#fff;
    height:97rpx;
}

.filters-wrap{
    height: 98rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.filters-items {
    flex: 1;
    padding: 0 20rpx;
    margin-right: 20rpx;
    background-color:#fff;
    color:#666666;
    font-size:24rpx;
    line-height:48.6rpx;
    text-align:left;
    font-family:'HiraginoSansGB-W3';
    border:solid 1px #dddddd;
    border-radius:24.3rpx;
    white-space: nowrap;
}

/*商品列表*/
.section {
    height: calc(100%);
}

.goods-wrap {
    margin-top:20rpx;
    width:100%;
}

.flex-view-item {
    display: inline-block;
    width: 367rpx;
    margin-right: 16rpx;
    margin-bottom: 17rpx;
    background-color:#fff;
}

.flex-view-item:nth-child(even) {
    margin-right:0rpx;
}

.goods-img > image {
    width: 367rpx;
    height: 367rpx;
}
.goods-detail {
    margin-left:20rpx;
    margin-right:20rpx;
    margin-top:20rpx;
    margin-bottom:30rpx;
}

.brand-name {
    font-family:Avenir Next Demi;
    font-weight:bold;
    line-height:1.3;
    font-size: 20rpx;
}
.goods-name {
	font-size: 22rpx;line-height: 32rpx;margin:10rpx 0rpx;color: #666;font-weight: 200;height: 60rpx;overflow: hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical; 
}

.price, .sale-price {
	font-size: 22rpx;
	font-weight: 300;
}
