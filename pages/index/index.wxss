page{
  font-family: PingFangSC-Regular, Arial, Tahoma, sans-serif;font-size: 26rpx;color:#333;
  background: #F1F1ED;
}
.ellipsis {
  overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}
.item{
  margin-bottom:20rpx;
}
.group-owner{
  height: 60rpx;background: #fff;padding: 15rpx;overflow: hidden;
}
.group-owner .avatar{
  width: 60rpx;height: 60rpx;border-radius: 50%;background: no-repeat center center;background-size: cover;float: left;position: relative;
}
.group-owner .avatar .icon{
  position: absolute;width: 26rpx;height: 26rpx;background: no-repeat center center; background-size: cover;right: -2rpx;bottom: -2rpx;
}
.group-owner .right{
  margin-left: 75rpx;
}
.group-owner .right .name{
  font-size: 22rpx;
}
.group-owner .right .certificate_name{
  font-size: 20rpx;color:#999;
}
.collection-banner{
  width: 100%;height: 450rpx;background: no-repeat center center;background-size: cover;
  overflow: hidden;
}
.scroll-y{
  clear: both;
}
.special{
		text-align: left;overflow:scroll;overflow-y: hidden;-webkit-overflow-scrolling: touch;white-space: nowrap;padding: 0rpx 5rpx;
}
.special_item{
		width: 260rpx;display:inline-block;margin:0rpx 5rpx;background: #fff;
}
.special_img{
  width: 260rpx;height: 260rpx;background:no-repeat center center;background-size: cover;position: relative;
  }
.special_name{
  position: absolute;color: #fff;bottom: 22rpx;left: 20rpx;z-index: 1000;
}
.special_title{
  width: 100%;text-align: center;box-sizing: border-box;font-size: 36rpx;font-weight: bold;color: #333;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;margin-top: 15rpx;line-height: 1;padding: 2rpx 20rpx;
}
.special_look{
  width: 100%;text-align: center;box-sizing: border-box;font-size: 20rpx;color:#666;line-height: 1;padding: 2rpx 20rpx;margin-top:5rpx;margin-bottom: 20rpx;
  }
.goods-banner{
  width: 100%;height: 450rpx;background: no-repeat center center;background-size: cover;
}
.collection-content{
  width: 100%;height: 150rpx;margin-top: 300rpx;overflow: hidden;color: #fff;text-align: center;
}
.collection-content .title{
  font-size: 40rpx;font-weight: bold;
}
.collection-content .desc{
  font-size: 30rpx;margin-top: 10rpx;
}
.goods-content{
  width: 100%;height: 200rpx;background: #fff;text-align: center;overflow: hidden;
}
.goods-content .brand_name{
  font-size: 28rpx;font-weight: bold;margin-top:20rpx;
}
.goods-content .goods_name{
  font-size: 24rpx;padding: 8rpx 0rpx;
}
.goods-content .final_price{
  color:#f66;
}